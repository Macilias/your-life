<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://www.oracle.com/webfolder/technetwork/jsc/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>your-life</display-name>

    <!--
        There are three means to configure Wickets configuration mode and they
        are tested in the order given.

        1) A system property: -Dwicket.configuration
        2) servlet specific <init-param>
        3) context specific <context-param>

        The value might be either "development" (reloading when templates change) or
        "deployment". If no configuration is found, "development" is the default. -->

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!--this is here to close the db on contextDestroyed()-->
    <listener>
        <listener-class>com.macilias.apps.model.EmbeddedDb</listener-class>
    </listener>

    <listener>
        <listener-class>com.macilias.apps.controller.service.utils.ApplicationContextHolder</listener-class>
    </listener>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:spring.cfg.xml</param-value>
    </context-param>

    <filter>
        <filter-name>wicket.your-life</filter-name>
        <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>com.macilias.apps.view.WicketApplication</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>anna.api.v1</filter-name>
        <filter-class>com.macilias.apps.controller.AnnaAPI_v1</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>com.macilias.apps.controller.AnnaAPI_v1</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>sidekick.api.v1</filter-name>
        <filter-class>com.macilias.apps.controller.SidekickAPI_v1</filter-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>com.macilias.apps.controller.SidekickAPI_v1</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>wicket.your-life</filter-name>
        <url-pattern>/app/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>anna.api.v1</filter-name>
        <url-pattern>/anna/api/v1/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>sidekick.api.v1</filter-name>
        <url-pattern>/sidekick/api/v1/*</url-pattern>
    </filter-mapping>
</web-app>
